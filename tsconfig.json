{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "paths": {
      "#/*": ["./src/*"]
    }
  },
  "include": ["src/*"]
}
